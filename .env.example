# Copy this file to .env and fill the values for your environment.
# DO NOT commit your .env file. It's already ignored via .gitignore.

# Base URL for the external adapter service the app talks to
ADAPTER_BASE_URL=http://adapter:3001

# JWT secret used to sign tokens. In production, set to a strong random string.
JWT_SECRET=change_me_in_production
JWT_EXPIRES_IN=60seg

# App runtime
NODE_ENV=production
PORT=3000

# Optional: enable debug logs (true/false)
DEBUG=false

# If you want the server to enable CORS for a single origin 
ALLOWED_ORIGIN= 'http://localhost:4200/'
