# Production env example (DO NOT commit secrets).
# Copy to .env.production locally for testing, or set real env vars in your host/container.

# Base URL for the external adapter service the app talks to
ADAPTER_BASE_URL=https://adapter.example.com

# JWT secret used to sign tokens. In production, set to a strong random string.
JWT_SECRET=replace_with_strong_random_value
JWT_EXPIRES_IN=7d

# App runtime
NODE_ENV=production
PORT=3000

# Optional: enable debug logs (true/false)
DEBUG=false

# If you want the server to enable CORS for a single origin, set it here (e.g. https://app.example.com)
ALLOWED_ORIGIN=
